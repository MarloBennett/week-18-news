<div id="main-content">


<h1>Scraped Articles</h1>
  
<!--
loop through database items and display the ones that have a false value for isDone
 -->
    <ul>
      {{#each articles}}
          <li>
            {{title}}: 
            <a href="https://www.bustle.com{{link}}">{{link}}</a>
            <br />
<!--
input for adding a comment
 -->
            <form action="/submit/{{id}}" method="POST">
              
              <textarea name="body" placeholder="Add a comment"></textarea>
              <br />
              <button name="addComment" type="submit">Submit</button>
            </form>
            

          </li>
      {{/each}}
    </ul>

</div>